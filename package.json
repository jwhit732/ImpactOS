{
  "name": "impact-os",
  "version": "0.1.0",
  "description": "Personal accountability system with email reminders, AI summarization, and Notion logging",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "send-test": "tsx src/scripts/send-test.ts",
    "poll-test": "tsx src/scripts/poll-test.ts",
    "auth:gmail": "tsx src/scripts/gmail-auth.ts",
    "test:credentials": "tsx src/scripts/test-credentials.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "accountability",
    "email",
    "notion",
    "ai",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@notionhq/client": "^2.2.15",
    "dotenv": "^16.4.5",
    "googleapis": "^134.0.0",
    "luxon": "^3.7.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
